#!/bin/sh

rm -rf wozmon.o rom.bin wozmon.dbg wozmon.*.txt

ca65 wozmon.s -g -o wozmon.o
ld65 -o rom.bin -C rom.cfg wozmon.o -m wozmon.map.txt -Ln wozmon.labels.txt --dbgfile wozmon.dbg

echo ""
echo ""
echo "Wozmon Hex Dump"
echo "------------------------------------------------------------------------------"
hexdump -C wozmon.bin
echo "------------------------------------------------------------------------------"
echo ""